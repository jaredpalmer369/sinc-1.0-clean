{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",                      // ✅ Required for alias resolution
    "paths": {
      "@/*": ["./*"]                     // ✅ Maps @/lib/... etc to root
    },
    "plugins": [{ "name": "next" }]      // ✅ Added per Next.js telemetry prompt
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"               // ✅ Added by Next.js
  ],
  "exclude": ["node_modules"]
}
